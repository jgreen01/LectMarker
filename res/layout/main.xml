<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#000000" android:orientation="vertical" android:layout_marginTop="5dp">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:duplicateParentState="false" android:layout_height="wrap_content" android:id="@+id/ButtonBack" android:layout_width="wrap_content" android:background="@drawable/back_icon" android:saveEnabled="true" android:drawingCacheQuality="auto" android:minWidth="40dp" android:layout_marginRight="20dp"></Button>
        <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/trackName" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#ffff88" android:layout_width="200dp"></TextView>
        <Button android:layout_width="wrap_content" android:background="@drawable/fbscicon" android:id="@+id/ButtonFb" android:layout_marginLeft="10dp" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/LinearLayout">
    </LinearLayout>
	
	<ListView 
	
android:orientation="horizontal"
android:layout_height="0dip" 
android:layout_width="fill_parent"
android:layout_weight="1"
android:id="@+id/TheFileList1" android:visibility="visible" android:transcriptMode="normal">
</ListView>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:background="@drawable/bg"
	    >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    >
	<Button
		android:id = "@+id/ButtonVolume"
		android:background="@drawable/volume_button_off"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		android:visibility="gone"
		android:layout_marginTop = "4dip"
		android:layout_marginLeft = "5dip"
		android:layout_marginRight="5dip"/>
	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight = "1"
	    android:gravity="center"
	    >
	      <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="4dip" android:id="@+id/ButtonPlayBook" android:background="@drawable/s_playbm"></Button>
	      <Button android:layout_marginRight="5dip" android:layout_marginTop="4dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/s_prev" android:id="@+id/ButtonRwd" android:layout_marginLeft="5dip"></Button> 
	<Button
		android:id ="@+id/ButtonPause"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		android:layout_marginTop = "4dip"
		android:layout_marginLeft = "5dip"
		android:layout_marginRight="5dip" android:background="@drawable/s_pause"/>
	<Button android:layout_marginRight="5dip" android:layout_marginLeft="5dip" android:layout_marginTop="4dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/s_next" android:id="@+id/ButtonFwd"></Button>
	<Button android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:layout_marginTop="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ButtonBookmark" android:background="@drawable/s_bookmark"></Button>
	</LinearLayout>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    >
	<LinearLayout
	    	android:layout_height="wrap_content"
	    	android:layout_width="fill_parent"
	    	android:layout_gravity="top"
	    	android:gravity="center"
	    	android:orientation="horizontal">
	    <TextView
	    	android:id="@+id/nowTime"
	    	android:layout_height = "wrap_content"
	    	android:layout_width ="wrap_content"
	    	android:layout_gravity="center"
	    	android:textSize="12dip"
	    	android:textStyle="bold"
	    	android:paddingLeft = "7dip"
	    	android:paddingBottom = "2dip"
	    	android:text = "0:00" android:textColor="#8c8d8d"/>
	    <SeekBar
	    	android:id="@+id/PBar"
	    	android:layout_gravity="bottom"
	    	android:progressDrawable ="@drawable/seekbar"
	    	android:thumb="@drawable/slider"
	        android:layout_width="0dip"
	        android:layout_weight = "1"
	        android:layout_height="wrap_content"
	        android:maxHeight = "5dip"
	        android:max = "100"
	        android:paddingLeft = "10dip"
	        android:paddingRight = "10dip"
	        android:progress="0"
	        android:secondaryProgress="0" />
	    <TextView
	    	android:id="@+id/allTime"
	    	android:layout_height = "wrap_content"
	    	android:layout_width ="wrap_content"
	    	android:layout_gravity="center"
	    	android:textSize="12dip"
	    	android:textStyle="bold"
	    	android:paddingRight = "7dip"
	    	android:paddingBottom = "2dip"
	    	android:text = "0:00" android:textColor="#8c8d8d"/> 
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>

</LinearLayout>